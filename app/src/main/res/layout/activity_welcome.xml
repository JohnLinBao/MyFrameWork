<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/welcome_hy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:src="@drawable/start_bg"/>

    <RelativeLayout
        android:id="@+id/welcome_gg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/welcome_gg_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/welcome_gg_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/welcome_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <android.support.v4.view.ViewPager
            android:id="@+id/welcome_guide_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="180dp">

        </android.support.v4.view.ViewPager>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#3399ff"
            android:padding="30dp"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/welcome_guide_register"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:text="注册"
                android:textColor="#3399ff" />

            <Button
                android:id="@+id/welcome_guide_login"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="登录"
                android:textColor="#3399ff" />

            <TextView
                android:id="@+id/welcome_guide_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/welcome_guide_login"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="第三方账号登录"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/welcome_guide_QQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/welcome_guide_tv"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/qq_grey"
                 />

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>