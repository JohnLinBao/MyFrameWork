<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_header"></include>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--输入手机号-->
        <TableRow>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/ihpone_grey"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/login_phonenumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="25dp"
                android:textSize="15sp"
                android:hint="请输入手机号"
                android:maxLength="11"
                android:inputType="phone"
                android:background="@null"/>
        </TableRow>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <!--输入密码-->
        <TableRow>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/mima_grey"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/login_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="25dp"
                android:textSize="15sp"
                android:hint="请输入6-20位的密码"
                android:maxLength="20"
                android:inputType="textPassword"
                android:background="@null"/>

            <ImageView
                android:id="@+id/login_password_isvisible"
                android:layout_width="10dp"
                android:layout_height="25dp"
                android:src="@drawable/biyan"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"/>
        </TableRow>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
    </TableLayout>

    <TextView
        android:id="@+id/login_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:textColor="@color/black"
        android:layout_gravity="right"
        android:layout_margin="10dp"/>

    <!--登录-->
    <Button
        android:id="@+id/login_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textColor="@android:color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_selector_gray"
        />

    <!--用户协议-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册|登录代表您已同意"
            android:textSize="10sp"

            />

        <TextView
            android:id="@+id/login_useragreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户使用协议》"
            android:textSize="10sp"
            android:textColor="@color/theme_color"
            />
    </LinearLayout>

</LinearLayout>